<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.FragmentConfigure">


    <TextView
        android:id="@+id/functionView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:minHeight="35dp"
        android:gravity="bottom"
        android:text="Math Function"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutFunction"/>

    <LinearLayout
        android:id="@+id/linearLayoutFunction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/functionView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/functionButton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="@id/functionView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/functionView" />


        <Button
            android:id="@+id/functionButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Sub"
            app:layout_constraintTop_toBottomOf="@+id/functionView" />

        <Button
            android:id="@+id/functionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Mul"
            app:layout_constraintTop_toBottomOf="@+id/functionView" />


        <Button
            android:id="@+id/functionButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Div"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintStart_toEndOf="@+id/functionButton2"
            app:layout_constraintTop_toBottomOf="@+id/functionView" />

    </LinearLayout>

    <TextView
        android:id="@+id/digitView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:minHeight="35dp"
        android:text="Number of Digits"
        android:layout_marginBottom="900dp"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutDigit"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFunction" />


    <LinearLayout
        android:id="@+id/linearLayoutDigit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/digitView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/digitButton0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:text="10"
            app:layout_constraintTop_toBottomOf="@+id/digitView" />


        <Button
            android:id="@+id/digitButton1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:text="100"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="220dp"
            app:layout_constraintTop_toBottomOf="@+id/digitView" />


        <Button
            android:id="@+id/digitButton2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="1000"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="220dp"
            app:layout_constraintTop_toBottomOf="@+id/digitView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRandR"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDigit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/randomView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Randomize"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="20dp"
            android:minHeight="35dp"
            android:textSize="24dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/randomButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="240dp"
            android:layout_marginStart="20dp"
            android:text="Random"
            app:layout_constraintTop_toBottomOf="@+id/functionView" />



        <TextView
            android:id="@+id/rangeTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Range"
            android:layout_marginStart="20dp"
            android:minHeight="35dp"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rangeButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="240dp"
            android:layout_marginStart="20dp"
            android:text="Range"
            app:layout_constraintTop_toBottomOf="@+id/functionView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutStart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRandR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <TextView
            android:id="@+id/startTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Start Range: "
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="bottom"
            android:minHeight="40dp"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/startEditTextNumberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="425dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutEnd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/endTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:text="End Range: "
            android:layout_marginEnd="0dp"
            android:layout_marginStart="20dp"
            android:minHeight="40dp"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/endEditTextNumberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNumProblems"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/numTextView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="bottom"
            android:text="Number of\nProblems: "
            android:layout_marginEnd="28dp"
            android:layout_marginStart="20dp"
            android:minHeight="90dp"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/numEditTextNumberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:ems="10"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutNumProblems" />

</androidx.constraintlayout.widget.ConstraintLayout>