<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.FragmentConfigure">

    <TextView
        android:id="@+id/topView"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:minHeight="35dp"
        android:gravity="bottom"
        android:text=" "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/topView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/functionView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:minHeight="35dp"
            android:gravity="bottom"
            android:text="@string/Function"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/functionButton0"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/switch_on"
            android:text="@string/Add"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/functionButton1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/switch_off"
            android:textColor="@color/black"
            android:text="@string/Sub"/>

        <Button
            android:id="@+id/functionButton2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/switch_off"
            android:textColor="@color/black"
            android:text="@string/Mul"/>

        <Button
            android:id="@+id/functionButton3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="@color/switch_off"
            android:textColor="@color/black"
            android:text="@string/Div"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutDigits"
        android:layout_width="625dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/digitView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:minHeight="35dp"
            android:text="@string/Level"
            android:layout_marginBottom="900dp"
            android:textSize="20sp"
            android:textStyle="bold"/>


            <Button
                android:id="@+id/digitButton0"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/switch_on"
                android:textColor="@color/black"
                android:text="@string/level_0"
                app:layout_constraintTop_toBottomOf="@+id/digitView" />


            <Button
                android:id="@+id/digitButton1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="@string/level_1"
                android:backgroundTint="@color/switch_off"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/digitView" />


            <Button
                android:id="@+id/digitButton2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/level_2"
                android:backgroundTint="@color/switch_off"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/digitView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRandR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDigits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <Button
            android:id="@+id/randomButton"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/switch_on"
            android:textColor="@color/black"
            android:text="@string/Ordered" />

        <Button
            android:id="@+id/rangeButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/switch_off"
            android:textColor="@color/black"
            android:text="@string/Range" />

        <TextView
            android:id="@+id/startTextView"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:minHeight="35dp"
            android:text="@string/Start"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/startEditTextNumberDecimal"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="@string/Start_Range"
            android:autofillHints="@string/Start_Range"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/endTextView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:minHeight="35dp"
            android:text="@string/End"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/endEditTextNumberDecimal"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/End_Range"
            android:autofillHints="@string/End_Range"
            android:visibility="invisible"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNumProblems"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRandR">

        <TextView
            android:id="@+id/numTextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:minHeight="35dp"
            android:text="@string/Number"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numEditTextNumberDecimal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="@string/Num_Problems"
            android:autofillHints="@string/Start_Range"
            android:ems="10"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:text="@string/Go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutNumProblems" />

</androidx.constraintlayout.widget.ConstraintLayout>