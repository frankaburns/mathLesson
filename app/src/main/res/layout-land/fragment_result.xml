<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentResult">

    <LinearLayout
        android:id="@+id/linearLayoutChart"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">


    <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/background_color"
            android:gravity="start"
            android:padding="15dp"
            android:text="@string/your_result"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:id="@+id/resultChart"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewResult"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutbuttons"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginStart="400dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutChart"
        app:layout_constraintVertical_bias="0.5">

    <Button
        android:id="@+id/buttonNewLesson"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@color/bar_color"
        android:text="@string/new_lesson"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:background="@color/bar_color"
        android:text="@string/button_exit"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNewLesson" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>